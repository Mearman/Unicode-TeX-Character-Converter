{
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/node": "^20.11.24",
		"rimraf": "^5.0.5",
		"rollup": "^4.12.0",
		"rollup-plugin-dts": "^6.1.0",
		"syncpack": "^12.3.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3",
		"wireit": "^0.14.4"
	},
	"name": "unicode-tex-character-converter",
	"scripts": {
		"build": "wireit",
		"test": "npm run test:tsx",
		"test:node": "wireit",
		"test:tsx": "wireit"
	},
	"type": "module",
	"version": "1.0.0",
	"wireit": {
		"build": {
			"command": "tsc && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
			"dependencies": [
				"syncpack"
			],
			"output": [
				"dist"
			]
		},
		"syncpack": {
			"command": "syncpack fix-mismatches && syncpack format"
		},
		"test:node": {
			"command": "node --loader ts-node/esm --test-reporter=spec --test ./__tests__/**/*.test.ts"
		},
		"test:tsx": {
			"command": "node --import tsx --test-reporter=spec --test ./__tests__/**/*.test.ts"
		}
	}
}
