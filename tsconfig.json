{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": false,
		"lib": [
			"ES2017"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noEmitOnError": true,
		"outDir": "dist",
		"paths": {},
		"removeComments": false,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2017"
	},
	"include": [
		"src/**/*",
		"rollup.config.ts"
	]
}
